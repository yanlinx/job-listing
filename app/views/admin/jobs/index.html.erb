<h2 class="text-center underline">Administor</h2>

<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    margin: auto;
    box-shadow: 10px 10px 5px grey;
}

td, th {
    border: none;
    text-align: left;
    padding:15px;
}
th {background-color: #FFCA28}
tr:nth-child(even) {
    background-color: #FFF8E1;
}
</style>

<table>

<thead style="font-size:115%">
  <tr>
    <th>Job</th>
    <!-- <th>Description</th> -->
    <th>resume quantity</th>
    <th>Upper wage</th>
    <th>Lower wage</th>
    <th>Status</th>
    <th>Date posted</th>
</thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job)%>
      <%= link_to(job.title,admin_job_path(job))%>
    </td>
    <!-- <td><%= job.description %></td> -->
    <td><%= link_to(job.resumes.count,admin_job_resumes_path(job)) %></td>
    <td><%= job.wage_upper_bound %></td>
    <td><%= job.wage_lower_bound %></td>
    <td>
      <%= link_to edit_admin_job_path(job),class: "btn btn-xs btn-primary" do %><i class="fa fa-pencil"></i><% end %>
      <%= link_to admin_job_path(job),class: "btn btn-xs btn-danger",:method => :delete,:data =>{:confirm =>"Are you sure?"} do%><i class="fa fa-trash-o"></i><% end %>
      <% if job.is_hidden %>
      <%= link_to publish_admin_job_path(job),:class => "btn btn-xs btn-success",:method => :post do%><i class="fa fa-eye"></i><% end %>
     <% else %>
      <%= link_to hide_admin_job_path(job),:method => :post,class: "btn btn-xs btn-warning" do%><i class="fa fa-eye-slash"></i><% end %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
    <% end %>
  </table>
  <div class="text-center">
      <%= will_paginate @jobs,renderer: BootstrapPagination::Rails  %>
  </div>
